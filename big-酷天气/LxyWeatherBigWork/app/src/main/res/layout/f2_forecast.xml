<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="#8000">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_refresh"
        android:textColor="@color/text_black"
        android:text="24小时预报"
        android:layout_marginLeft="10dp"
        android:textSize="28dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_update"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="20dp"
        android:gravity="right"
        android:layout_marginRight="5dp"
        android:textColor="@color/text_while" />
</LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#A9FFFFFF" />

    <HorizontalScrollView
        android:layout_marginTop="10dp"
        android:scrollbars="none"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/time0"
                    style="@style/compentToday"
                    android:text="13:00" />
                <TextView
                    android:id="@+id/time1"
                    style="@style/compentToday"
                    android:text="13:00" />

                <TextView
                    android:id="@+id/time2"
                    style="@style/compentToday"
                    android:text="13:00" />

                <TextView
                    android:id="@+id/time3"
                    style="@style/compentToday"
                    android:text="13:00" />

                <TextView
                    android:id="@+id/time4"
                    style="@style/compentToday"
                    android:text="13:00" />

                <TextView
                    android:id="@+id/time5"
                    style="@style/compentToday"
                    android:text="13:00" />

                <TextView
                    android:id="@+id/time6"
                    style="@style/compentToday"
                    android:text="13:00" />

                <TextView
                    android:id="@+id/time7"
                    style="@style/compentToday"
                    android:text="13:00" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tmp0"
                    style="@style/compentToday"
                    android:text="12℃" />

                <TextView
                    android:id="@+id/tmp1"
                    style="@style/compentToday"
                    android:text="12℃" />

                <TextView
                    android:id="@+id/tmp2"
                    style="@style/compentToday"
                    android:text="12℃" />

                <TextView
                    android:id="@+id/tmp3"
                    style="@style/compentToday"
                    android:text="12℃" />

                <TextView
                    android:id="@+id/tmp4"
                    style="@style/compentToday"
                    android:text="12℃" />

                <TextView
                    android:id="@+id/tmp5"
                    style="@style/compentToday"
                    android:text="12℃" />

                <TextView
                    android:id="@+id/tmp6"
                    style="@style/compentToday"
                    android:text="12℃" />

                <TextView
                    android:id="@+id/tmp7"
                    style="@style/compentToday"
                    android:text="12℃" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cond_txt0"
                    style="@style/compentToday"
                    android:text="大雪" />

                <TextView
                    android:id="@+id/cond_txt1"
                    style="@style/compentToday"
                    android:text="大雪" />

                <TextView
                    android:id="@+id/cond_txt2"
                    style="@style/compentToday"
                    android:text="大雪" />

                <TextView
                    android:id="@+id/cond_txt3"
                    style="@style/compentToday"
                    android:text="大雪" />

                <TextView
                    android:id="@+id/cond_txt4"
                    style="@style/compentToday"
                    android:text="大雪" />

                <TextView
                    android:id="@+id/cond_txt5"
                    style="@style/compentToday"
                    android:text="大雪" />

                <TextView
                    android:id="@+id/cond_txt6"
                    style="@style/compentToday"
                    android:text="大雪" />

                <TextView
                    android:id="@+id/cond_txt7"
                    style="@style/compentToday"
                    android:text="大雪" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/wind_dir0"
                    style="@style/compentToday"
                    android:text="西北风" />

                <TextView
                    android:id="@+id/wind_dir1"
                    style="@style/compentToday"
                    android:text="西北风" />

                <TextView
                    android:id="@+id/wind_dir2"
                    style="@style/compentToday"
                    android:text="西北风" />

                <TextView
                    android:id="@+id/wind_dir3"
                    style="@style/compentToday"
                    android:text="西北风" />

                <TextView
                    android:id="@+id/wind_dir4"
                    style="@style/compentToday"
                    android:text="西北风" />

                <TextView
                    android:id="@+id/wind_dir5"
                    style="@style/compentToday"
                    android:text="西北风" />

                <TextView
                    android:id="@+id/wind_dir6"
                    style="@style/compentToday"
                    android:text="西北风" />

                <TextView
                    android:id="@+id/wind_dir7"
                    style="@style/compentToday"
                    android:text="西北风" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/wind_sc0"
                    style="@style/compentToday"
                    android:text="3-4级" />

                <TextView
                    android:id="@+id/wind_sc1"
                    style="@style/compentToday"
                    android:text="3-4级" />

                <TextView
                    android:id="@+id/wind_sc2"
                    style="@style/compentToday"
                    android:text="3-4级" />

                <TextView
                    android:id="@+id/wind_sc3"
                    style="@style/compentToday"
                    android:text="3-4级" />

                <TextView
                    android:id="@+id/wind_sc4"
                    style="@style/compentToday"
                    android:text="3-4级" />

                <TextView
                    android:id="@+id/wind_sc5"
                    style="@style/compentToday"
                    android:text="3-4级" />

                <TextView
                    android:id="@+id/wind_sc6"
                    style="@style/compentToday"
                    android:text="3-4级" />

                <TextView
                    android:id="@+id/wind_sc7"
                    style="@style/compentToday"
                    android:text="3-4级" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>



</LinearLayout>